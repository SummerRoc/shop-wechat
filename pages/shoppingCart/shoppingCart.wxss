/* pages/shoppingCart/shoppingCart.wxss */
.cart{
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  .empty_wrap{
    width: 100%;
    padding: 60rpx 0 30rpx;
    text-align: center;
  }
  .empyt_icon{
    width: 220rpx;
    height: 200rpx;
  }
  .empyt_txt{
    display: block;
    font-size: 32rpx;
    color: rgba(51,51,51,.66);
    line-height: 48rpx;
    margin: 22rpx 0;
  }
  .content{
    padding: 10rpx;
    display: flex;
    /* transform: translateX(90px); */
    /* margin-left: -90px; */
    padding-right: 0;
  }
  .select_icon{
    width: 8%;
    display: flex;
    align-items: center;
  }
  .goods{
   width: 100%;
   padding: 20rpx 10rpx;
   border-radius: 8rpx;
   display: flex;
  }
  .goods .good_img{
    width: 30%;
    height: 200rpx;
  }
  .good_info{
    width: 60%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 25rpx;
  }
  .good_title{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin: 10rpx 0;
    font-size: 28rpx;
  }
  .good_price{
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
 .good_price .price{
    /* line-height: 30rpx; */
    color: #e4393c;
    font-size: 30rpx;
  }
  
  .num_wrap{
    width: 220rpx;
    height: 40px;
    display: flex;
    align-items: center;
  }
  .num_wrap .btn{
    color: #333; 
    padding: 0;
    background: #fff;
  }
  .num_wrap input{
    background: rgb(242,242,242);
    text-align: center;
    font-size: 24rpx;
    width:500rpx;
  }
  .fixBar{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    background: #fff;
    border-top: 2rpx solid #e8e8ed;
    color: #333;
    font-size: 28rpx;
    z-index: 99;
    display: flex;
    flex-direction: row;
    height: 100rpx;
  }
  .select_all{
    width: 20%;
    line-height: 100rpx;
    font-size: 24rpx;
    color: #999;
    box-sizing: border-box;
    padding-left: 20rpx;
  }
  .select_all text {
    vertical-align: middle;
  }
  .select_all .icon{
    width: 36rpx;
    height: 36rpx;
    margin-right: 10rpx;
    vertical-align: middle;
  }
  .total{
    width: 40%;
    box-sizing: border-box;
    line-height: 100rpx;
    font-size: 32rpx;
    text-align: center;
  }
  .total .money{
    color: #e4393c;
    font-weight: 700;
  }
  .btn_amount{
    width: 40%;
    display: flex;
  }
  .btn_amount button{
    background: #e4393c;
    color: #fff;
    height: 100rpx;
    border: none;
    border-radius: 30px;
  }
.deleteBtn{
    padding: 0 !important;
    margin: 0 !important;
    width: 100rpx !important;
    font-size: 12px;
    background: #fff;
}